<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderBackground">
        <item name="android:background">#C8D7C8</item>
    </style>

    <style name="LogonPageSendButton">
        <item name="android:background">@drawable/send_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="LogonPageRegisterButton">
        <item name="android:background">@drawable/register_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="MenuButton">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/muli_regular</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AddFormInfo">
        <item name="android:textColor">#FFBDBD</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AddFormConfirmation">
        <item name="android:textColor">#FFBDBD</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AddFormLabel">
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="AddPictureButton">
        <item name="android:background">@drawable/picture_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LogonPageBackground">
        <item name="android:background">#C8D7C8</item>
    </style>

    <style name="LogonPageLabel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="LogonPageTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/oneday</item>
    </style>

    <style name="WardrobeListName">
        <item name="android:textColor">#428BCA</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="WardrobeListType">
        <item name="android:textColor">#5CB85C</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="WardrobeListColor">
        <item name="android:textColor">#5CB85C</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="WardrobeElementViewName">
        <item name="android:textColor">#428BCA</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="WardrobeElementViewType">
        <item name="android:textColor">#5CB85C</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="WardrobeElementViewColor">
        <item name="android:textColor">#EEA2A9</item>
        <item name="android:fontFamily">@font/tajawal_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="logonPageInput">
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/logon_header_input</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="SplashScreenTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/oneday</item>
    </style>

</resources>
