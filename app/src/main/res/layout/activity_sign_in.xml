<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    style="@style/LogonPageBackground"
    android:id="@+id/mainBlock">

    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/LogonPageTitle"
        android:text="@string/app_name"
        android:id="@+id/signInTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/signInForm"/>

    <LinearLayout
        android:id="@+id/signInForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/logonPageForm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/signInEmailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/logon_page_email_hint"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/signInPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/logon_page_password_hint"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logonPageSendButton"
                android:layout_weight="1"
                android:onClick="onSignInClick"
                android:text="@string/logon_page_send_button"
                style="@style/LogonPageSendButton"/>

            <Button
                android:id="@+id/logonPageRegisterButton"
                style="@style/LogonPageRegisterButton"
                android:layout_weight="1"
                android:onClick="onSignUpClick"
                android:text="@string/logon_page_subscribe_button" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>